<!DOCTYPE module PUBLIC
        "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
        "http://www.puppycrawl.com/dtds/configuration_1_3.dtd">
<!-- OOB checkstyle rules can be customized here -->
<module name="com.puppycrawl.tools.checkstyle.Checker">
    <property name="charset" value="UTF-8"/>

    <module name="SuppressWarningsFilter"/>

    <module name="LineLength">
        <property name="max" value="120"/>
        <property name="severity" value="error"/>
    </module>

    <module name="SuppressionFilter">
        <!--TODO replace src/main/resources/quality/ with ${config_loc} when migration to gradle completed-->
        <property name="file" value="src/main/resources/quality/suppressions.xml"/>
    </module>
</module>